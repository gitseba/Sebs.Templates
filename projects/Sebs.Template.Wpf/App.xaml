<prism:PrismApplication x:Class="Sebs.Template.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Wpf"
             >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--Definitions-->
                <ResourceDictionary Source="/Resources/Definitions/Shared.xaml"/>

                <!--Styles-->
                <ResourceDictionary Source="/Resources/Styles/Borders.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Buttons.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>